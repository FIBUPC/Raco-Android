<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vista_ocupacio_aules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutCarregantDadesOcupacio"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/blanc" >

        <ProgressBar
            android:id="@+id/carregantDadesOcupacio"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" >
        </ProgressBar>
    </RelativeLayout>

    <TextView
        android:id="@+id/actualitzacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="5dip"
        android:textColor="@color/lletraPrincipal"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/titols_horari"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/aulaText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:height="30dip"
            android:text="@+string/horari_hora"
            android:textColor="@color/lletraPrincipal"
            android:width="80dip" />

        <TextView
            android:id="@+id/classeText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:height="30dip"
            android:text="@+string/horari_assignatura"
            android:textColor="@color/lletraPrincipal"
            android:width="150dip" />

        <TextView
            android:id="@+id/seientsLliuresText"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:height="30dip"
            android:text="@+string/horari_aula"
            android:textColor="@color/lletraPrincipal"
            android:width="100dip" />
    </LinearLayout>

    <ListView
        android:id="@+id/listaules"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/gris"
        android:dividerHeight="2.0sp" >
    </ListView>

</LinearLayout>