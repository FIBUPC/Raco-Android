<?xml version="1.0" encoding="utf-8"?>
<!-- Vista que es veu quan un usuari clica a un element de la llista inicial -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fons_detall"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/vista_assignatura_info_fib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dataIndiv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10dip"
                android:textColor="@color/lletraSecundaria"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dataIndiv"
                android:layout_marginTop="20dip"
                android:background="@color/fonsLletraTitol" >

                <ImageView
                    android:id="@+id/imageIndiv"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="6sp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/titolIndiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/imageIndiv"
                    android:textColor="@color/lletraPrincipal"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/descripIndiv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="10dip"
                android:textColor="@color/lletraSecundaria"
                android:textSize="16sp" />

            <Button
                android:id="@+id/linkIndiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/descripIndiv"
                android:layout_marginBottom="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10dip"
                android:drawableRight="@drawable/fletxa_celda"
                android:gravity="center|center_horizontal"
                android:textColor="@color/lletraSecundaria"
                android:textSize="13sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>