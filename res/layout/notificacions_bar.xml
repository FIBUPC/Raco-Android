<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificacioLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/imageNotificacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_notificacio_raco_blau" />

    <TextView
        android:id="@+id/titolNotificacio"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageNotificacio"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/missatgeNotificacio"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:text="@string/notificacio"
        android:layout_toRightOf="@+id/imageNotificacio"
        android:textColor="#fff" />

</RelativeLayout>